################################################################################

config NXP_WM_DRM_PD
	tristate "Include NXP Windows Media PD"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && SOC_PNX8335 && NXP_DRIVERS_DBG
	default m
	help
	  Initialisation of NXP Windows Media PD

################################################################################


config NXP_DDMSVD2
	bool
	depends on NXP_DRIVERS_CORE && SOC_PNX8335
	default y
	help
	  Driver for the MSVD2 device. Requires tmdlMsvd to operate.


################################################################################

config NXP_TMMSVD
	bool
	depends on NXP_DRIVERS_CORE && !SOC_PNX8335
	default y
	help
	  tmMsvd is a driver for the Multi Standard Video Decoder 


################################################################################

config NXP_TMHWCONFIGREV4
	bool
	depends on NXP_DRIVERS_CORE && !SOC_PNX8335 && BROKEN
	default y
	help
	  Config block on PNX8331


################################################################################

config NXP_TMHWCONFIG8335
	bool
	depends on NXP_DRIVERS_CORE && SOC_PNX8335
	default y
	help
	  Config block on PNX8335


################################################################################

config NXP_TMHWAVCHIP
	bool "Include tmhwAvChip"
	depends on NXP_DRIVERS_CORE && SWPLF220
	default n
	help
	  AV chip support. (Only available on STB220)


################################################################################

config NXP_STBSTREAMINGSYSTEM
	bool "Include Streaming System"
	depends on NXP_DRIVERS_CORE && !IC_EMULATION && !SWPLF220
	default y
	help
	  SBM Streaming System


################################################################################

config NXP_DRIVERS_VIDEORENDERER
	tristate "Include Video Renderer"
	depends on NXP_DRIVERS_CORE && !SWPLF220 && SOC_PNX8335
	default m
	help
	  STB Video Renderer


################################################################################

config NXP_DRIVERS_MEMBANDWIDTH
	tristate "Include memory bandwidth profiling"
	depends on NXP_DRIVERS_CORE && !SWPLF220 && SOC_PNX8335 && BROKEN
	default n
	help
	  Enables measurements of memory bandwidth using the CDMMU hardware block


################################################################################

config NXP_DRIVERS_KBUFMGR
	tristate "Include Kernel Buffer Manager component"
	depends on NXP_DRIVERS_CORE && !SWPLF220
	default m
	help
	  Allocates large buffers (SBM and frame stores) in kernel space and allows them to be accessed from user space.


################################################################################

endmenu

