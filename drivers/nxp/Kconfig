################################################################################

config NXP_DRIVERS_VO
	tristate "Include Analog Video Output driver"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && NXP_STB225
	default m
	select VIDEODENC
	help
