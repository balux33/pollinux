menu "NXP Drivers"

################################################################################

config NXP_DRIVERS
	tristate "Enable NXP Drivers support"
	default m

config IC_EMULATION
	bool "Build for IC Emulator"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS)
	help
	  Create a build for use on the emulator. This causes the compiler flag TMFL_IC_EMULATION to be set to "true".

################################################################################

choice
	prompt "Software PLatform"
	depends on NXP_DRIVERS
	default SWPLF220

config SWPLF220
	bool "STB220 Software Platform"
	help
	  Build kernel for STB220 Software Platform

config SWPLF225
	bool "STB225 Software Platform"
	help
	  Build kernel for STB225 Software Platform

endchoice

################################################################################
config NXP_DRIVERS_GPL
	tristate "NXP OSAL drivers"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS)
	default m
	help
	  NXP drivers which will need to have GPL license.
	  Included tmosal and tmml.
	  Usually enabled as a module.
	  For the emulator it is usually set to 'y'.


################################################################################

config NXP_DRIVERS_CORE
	tristate "NXP Core drivers"
	depends on NXP_DRIVERS_GPL
	default m
	help
	  Main NXP (non-GPL) drivers for the SoC.
	  Usually enabled as a module.
	  For the emulator it is usually set to 'y'.
	  These drivers should NOT be GPL'ed.


################################################################################

config NXP_VIDUSECASE
	tristate "NXP PNX833x video use cases"
	depends on NXP_DRIVERS_CORE
	default m
	help
	  Use cases - integrating drivers into a video use case suitable for
	  emulation testing and demonstration.

################################################################################
config NXP_DRIVERS_AFTE
	tristate "NXP PNX833x Afte Main module"
       depends on NXP_DRIVERS_CORE
	default y
	help
	  Use cases - an AFTE test module used in final system test.

################################################################################
# Embedded MPEG/H264 data

choice
	prompt "Include MPEG/H264 ES Test data for MSVD video display"
	depends on NXP_VIDUSECASE
	default NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_TABLE_TENNIS

config NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_TABLE_TENNIS
	bool "Include Table Tennis"
	help
	  Suspicious looking Europeans playing table tennis.

config NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_PEARTREE
	bool "Include Pear tree"
	help
	  Some sort of pear tree thing.

config NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_H264_TRANSPORTER_720P
	bool "Include H264 Transporter 720p"
	help
	  H264 data.

config NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_H264_BE_COOL
	bool "Include H264 Be Cool SD"
	help
	  H264 data.

config NXP_VIDUSECASE_VIDEO_DISPLAY_DATA_NONE
	bool "Include None"
	help
	  No MSVD test data.
endchoice

################################################################################

config NXP_INCLUDEGFXTESTDATA
	bool "Include Test Image for GFX"
	depends on NXP_VIDUSECASE
	help
	  Include a testcard image for testing purposes.

################################################################################

choice
	prompt "Include YUV420 Test Image for VSS Block"
	depends on NXP_VIDUSECASE
	default NXP_KEIRAYUV420TESTDATA

config NXP_KEIRAYUV420TESTDATA
	bool "Include Keira"
	help
	  Include a test image for testing purposes (Keira Knightley).

config NXP_SPACESHIPYUV420TESTDATA
	bool "Include SpaceShip"
	help
	  Include a test image for testing purposes (SpaceShip Launch).

config NXP_KIDSTOYSYUV420TESTDATA
	bool "Include Kids Toys"
	help
	  Include a test image for testing purposes (Childrens Toys).

config NXP_NOYUV420TESTDATA
	bool "Include None"
	help
	  Include no test data.
endchoice

################################################################################

config NXP_SPLASH_SCREEN
	bool "Include NXP Splash Screen"
	default y
	help
	  NXP Splash Screen Implementation.
	  
################################################################################

config NXP_FRAMEBUFFER
	tristate "Include NXP Framebuffer"
	depends on NXP_DRIVERS_GPL && NXP_DRIVERS_CORE
	select FB
	select NXP_DRIVERS_VIDEORENDERER
	default m
	help
	  NXP Framebuffer Implementation.

################################################################################

config NXP_DRIVERS_DRAW
	tristate "Include NXP 2D Hardware Acceleration"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && SOC_PNX8335
	default m
	help
	  NXP 2D Hardware Acceleration Implementation.

################################################################################

config NXP_DRIVERS_GPIO
	tristate "Include NXP GPIO"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && SOC_PNX8335
	default m
	help
	  NXP GPIO Implementation.

################################################################################

config NXP_DRIVERS_ALSA
	tristate "Include NXP ALSA driver"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && SOC_PNX8335
	default m
	help
	  NXP ALSA Implementation.

################################################################################

config NXP_DRIVERS_BOOTDSP
	tristate "Boots the DSP CPU with a second Linux kernel"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && SOC_PNX8335
	default m
	help
	  Boots the DSP CPU with a second Linux kernel.


################################################################################

config NXP_DRIVERS_IPC
	tristate "Client/Server IPC API"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && SOC_PNX8335
	default m
	help
	  Client/Server IPC API. 
	  Normally only used for communication between the control and audio dsp CPUs
	  of PNX8335. On the audio dsp CPU it normally runs in userspace only.


################################################################################

config NXP_DRIVERS_NETDEV
	tristate "Include NXP network device for IPC"
	depends on NXP_DRIVERS && (!IC_EMULATION) && SOC_PNX8335 && (NXP_DRIVERS_BOOTDSP || PNX8335_AUDIO_MIPS)
	default m
	help
	  Ethernet over Memory IPC Network device.


################################################################################

config NXP_DRIVERS_DBG
	tristate "Include phStbDbg debug/trace driver"
	depends on NXP_DRIVERS
	default m
	help
	  phStbDbg driver.
	  It provides DBG macro control via a tmdbg command and /dev/phdbg device.


################################################################################

config NXP_DRIVERS_KERNELIFCE
	tristate "Include phKernelIfce driver"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && NXP_DRIVERS_DBG
	default m
	help
	  phKernelIfce driver.
	  It provides a generic userspace to kernelspace API,
	   via a /dev/kernelifce device.


################################################################################

config NXP_DRIVERS_MMIO
	tristate "Include /dev/mmio driver"
	depends on NXP_DRIVERS
	default m
	help
	  phStbMmio driver (MMIO register access via /dev/mmio).
	  Needed for the exStbMmio program.


################################################################################

config NXP_AK470X
	tristate "Include AK470X AV switch"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && NXP_STB225
	default m
	help
	  Initialisation of AK470X AV (SCART) switch

################################################################################

config NXP_AT24C64
	tristate "Include AT24C64 EEPROM Driver"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && NXP_STB225
	default m
	help
