################################################################################

config NXP_RS_SERVER
	tristate "Include NXP Remote Services Server"
	depends on NXP_DRIVERS && (!PNX8335_AUDIO_MIPS) && (!IC_EMULATION) && SOC_PNX8335 && NXP_DRIVERS_DBG
	default m
